{
    "manifest_version": 2,
    "name": "1st word capitalization",
    "version": "1.0",
    "description": "Chrome extension to correct grammar errors",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }